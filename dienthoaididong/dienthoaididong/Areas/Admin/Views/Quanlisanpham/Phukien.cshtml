@model IEnumerable<dienthoaididong.Models.Entities.sanpham>


@{
    ViewBag.Title = "Phukien";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12" style="width: 1132px">
        <div class="panel panel-default">
            <div class="panel-heading" style="text-align:center;font-weight:bold">
                Danh sách phụ kiện
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    @Html.ActionLink("Thêm mới", "Themmoi", null, new {@class="btn btn-success" })
                    <br />
                    <br />
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.sanpham_id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.hinhanh_sp)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.sanpham_name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.gia_sanpham)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.soluong_sp)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.theloai_id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.moi)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.style)
                                </th>
                                <th>Chức Năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">


                                    <td>
                                        @Html.DisplayFor(modelItem => item.sanpham_id)
                                    </td>
                                    <td>
                                        <img style="height:50px;width:50px" src="~/Hinhanh/hinhanhsp/@item.hinhanh_sp" />

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sanpham_name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.gia_sanpham)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.soluong_sp)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.theloai_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.moi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.style)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.sanpham_id }, new { @class = "btn btn-info" })
                                        @Html.ActionLink("Details", "Details", new { id = item.sanpham_id }, new { @class = "btn btn-warning" })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.sanpham_id }, new { @class = "btn btn-danger" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<style>
    a {
        color: red;
        /*font-size:16px;*/
    }

        a:hover {
            color: blue;
        }
</style>

