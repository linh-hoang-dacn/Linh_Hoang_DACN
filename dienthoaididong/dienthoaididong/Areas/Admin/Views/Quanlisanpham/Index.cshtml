@using dienthoaididong.Models.Entities;
@model IEnumerable<sanpham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}







@*<h2 style="text-align:center;width:1121px;font-weight:bold">Sản phẩm</h2>*@

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="text-align:center;font-weight:bold">
                Danh sách sản phẩm
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    @Html.ActionLink("Thêm mới", "Themmoi", null, new {@class="btn btn-success" })
                    <br />
                    <br />
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Ảnh</th>
                                <th>Mã Sản phẩm</th>
                                <th>Tên sản phẩm</th>
                                <th>Giá sản phẩm</th>
                                <th>Hệ điều hành</th>                          
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>
                                        <img style="height:50px;width:50px" src="~/Hinhanh/hinhanhsp/@item.hinhanh_sp" />

                                    </td>
                                    <td>@item.sanpham_id</td>
                                    <td>@item.sanpham_name</td>
                                    <td>@item.gia_sanpham</td>
                                    <td>@item.he_dieu_hanh</td>                               
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.sanpham_id }, new { @class = "btn btn-info" })
                                        @Html.ActionLink("Details", "Details", new { id = item.sanpham_id }, new { @class = "btn btn-warning" })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.sanpham_id }, new { @class = "btn btn-danger" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<style>
    a {
        color: red;
        /*font-size:16px;*/
    }

        a:hover {
            color: blue;
        }
</style>
