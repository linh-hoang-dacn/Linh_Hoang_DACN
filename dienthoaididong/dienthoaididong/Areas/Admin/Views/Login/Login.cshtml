@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bootstrap Admin Theme v3</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->

    <link href="~/Content/templateAdmin/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- styles -->
    <link href="~/Content/templateAdmin/css/styles.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body class="login-bg">
    <div class="header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- Logo -->
                    <div class="logo">
                        <h1><a href="index.html">Bootstrap Admin Theme</a></h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="login">
        <div class="page-content container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-wrapper">
                        <div class="box">
                            <div class="content-wrap">
                                <h6>Đăng nhập</h6>
                                <hr />
                                <form action="Dangnhap" method="post">
                                    <input class="form-control" name="txtEmail" type="text" placeholder="E-mail address">
                                    <input class="form-control" name="txtPassword" type="password" placeholder="Password">
                                    <button type="submit" class="btn btn-primary signup">Login</button>

                                </form>
                                <h2>@ViewBag.Thongbao</h2>
                            </div>
                        </div>
                        <div class="already">
                            <p>Don't have an account yet?</p>
                            <a href="signup.html">Sign Up</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="~/Content/templateAdmin/Script1.11.1.js"></script>
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/Content/templateAdmin/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/templateAdmin/js/custom.js"></script>
</body>
</html>
